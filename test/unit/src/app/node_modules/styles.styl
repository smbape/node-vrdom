// http://tj.github.io/nib/
@import 'nib'

body,
.full-container
    height: 100%

#content
    padding: 35px

.modal[open]
    max-height: 90vh
    width: 80vw
    height: initial
    display: flex
    flex-direction: column
    position: fixed
    top: 0
    bottom: 0

    > form
        flex: 1
        display: flex
        flex-direction: column
        
        input
            color: #333

    .mdl-dialog__content
        flex: 1
        overflow: auto
